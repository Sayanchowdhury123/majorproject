<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-4 offset-4" role="alert">
    <strong><%= success %></strong> 
     <button type="button" class="close flash-button " data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&#10005;</span>
      </button>
    </div>
     
<% } %>

<% if (error && error.length) { %>
<div class="alert alert-danger alert-dismissible fade show col-4 offset-4" role="alert">
    <strong><%= error %></strong> 
    <button type="button" class="close flash-button " data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&#10005;</span>
    </button>
  </div>
   
<% } %> 








